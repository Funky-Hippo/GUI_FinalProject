<Page
    x:Class="Gui_FinalProject.AdultBook"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Gui_FinalProject"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="Gray">

    <Canvas>

        <MediaElement x:ConnectionId='2' x:Name="media"/>


        <ComboBox x:ConnectionId='3' Canvas.Left="1430" Canvas.Top="20" Header="Volume" Foreground="Black"                                             >
            <ComboBoxItem Content="25%"/>
            <ComboBoxItem Content="50%"/>
            <ComboBoxItem Content="75%"/>
            <ComboBoxItem Content="100%"/>
        </ComboBox>

        <ComboBox Canvas.Left="1430" Canvas.Top="100" Header="Audio Speed" Foreground="Black">
            <ComboBoxItem Content="Normal"/>
            <ComboBoxItem Content="Faster"/>
            <ComboBoxItem Content="Slower"/>
        </ComboBox>

        <Button x:ConnectionId='4' Content="Play" Canvas.Left="1430" Canvas.Top="180" Background="Black"                         />
        <Button x:ConnectionId='5' Content="Pause" Canvas.Left="1430" Canvas.Top="240" Background="Black"                          />


        <FlipView x:ConnectionId='6' Width="1400" Height="775"                                             >

            <ScrollViewer>
                <Image Source="Assets\firstpage_adultbook - Copy.jpg"/>
            </ScrollViewer>

            <ScrollViewer>
                <Image Source="Assets\secondpage_adultbook.jpg"/>
            </ScrollViewer>

            <ScrollViewer>
                <Image Source="Assets\thirdpage_adultbook.jpg"/>
            </ScrollViewer>

            <ScrollViewer>
                <Image Source="Assets\fourthpage_adultbook.jpg"/>
            </ScrollViewer>

            <ScrollViewer>
                <Image Source="Assets\fifthpage_adultbook.jpg"/>
            </ScrollViewer>

            <ScrollViewer>
                <Image Source="Assets\seventhpage_adultbook.jpg"/>
            </ScrollViewer>

            <ScrollViewer>
                <Image Source="Assets\eigthpage_adultbook.jpg"/>
            </ScrollViewer>

            <ScrollViewer>
                <Image Source="Assets\ninthpage_adultbook.jpg"/>
            </ScrollViewer>

            <ScrollViewer>
                <Image Source="Assets\tenthpage_adultbook.jpg"/>
            </ScrollViewer>

        </FlipView>

    </Canvas>
</Page>

