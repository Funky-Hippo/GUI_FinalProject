<Page
    x:Class="Gui_FinalProject.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Gui_FinalProject"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="White"
    NavigationCacheMode="Enabled">

    <Canvas>

        <CommandBar  HorizontalAlignment="Left" VerticalAlignment="Center">

            <AppBarButton Content="Project Information">

            </AppBarButton>

        </CommandBar>

        <TextBlock Canvas.Left="675" Canvas.Top="140" Text="Library" FontSize="50"/>

        <ComboBox x:ConnectionId='2' Canvas.Left="10" Canvas.Top="60" x:Name="LanguageSelector" Header="Language">

            <ComboBoxItem Content="Default" IsSelected="True">
                
            </ComboBoxItem>

            <ComboBoxItem Content="Dark">
                
            </ComboBoxItem>
            
            
        </ComboBox>

        <ScrollViewer HorizontalScrollBarVisibility="Auto" Canvas.Left="350" Canvas.Top="250" Height="500" Width="800">
            <StackPanel Orientation="Horizontal">

                <Button x:ConnectionId='3' Width="480" Height="500" Margin="0,0,10,0" Background="Black"                                    >
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="500"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="480"/>
                        </Grid.ColumnDefinitions>


                        <Image Source="Assets/ThreeLittlePigs.jpg" Stretch="Fill"/>
                    </Grid>

                </Button>

                <Button x:ConnectionId='4' Width="400" Height="500" Margin="0,0,10,0" Background="Black"                        >
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="500"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="480"/>
                        </Grid.ColumnDefinitions>


                        <Image Source="Assets/DMVManual.jpg" Stretch="Fill"/>
                    </Grid>

                </Button>

            </StackPanel>



        </ScrollViewer>
    </Canvas>


</Page>

